<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mainColor">

    <RelativeLayout
        android:id="@+id/rl_fooddetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF"
        >
        <RelativeLayout
            android:id="@+id/rl_fooddetailtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  불닭볶음면"
                android:textSize="40dp"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"/>
            <Button
                android:id="@+id/bt_heart"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/heart_state"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="5dp"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:layout_below="@+id/rl_fooddetail"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/tv_cal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/mainColor"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/tv_carbo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/mainColor"
            android:layout_above="@+id/tv_cal"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"/>

        <TextView
            android:id="@+id/tv_prot"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/mainColor"
            android:layout_below="@+id/tv_cal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"/>

        <TextView
            android:id="@+id/tv_fat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/mainColor"
            android:layout_toLeftOf="@+id/tv_cal"
            android:layout_above="@+id/tv_cal"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/tv_vita"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/mainColor"
            android:layout_toLeftOf="@+id/tv_cal"
            android:layout_below="@+id/tv_cal"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/tv_diet"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/mainColor"
            android:layout_toRightOf="@+id/tv_cal"
            android:layout_above="@+id/tv_cal"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/tv_calcium"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/mainColor"
            android:layout_toRightOf="@+id/tv_cal"
            android:layout_below="@+id/tv_cal"
            android:layout_margin="5dp"/>
    </RelativeLayout>
    


</RelativeLayout>